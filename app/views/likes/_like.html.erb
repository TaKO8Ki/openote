<% if user_signed_in? %>

  <% unless article.like_user(current_user.id).blank? %>
    <%= link_to article_like_path(article_id: article.id ,id: article.likes[0].id), method: :delete, remote: true do %>
      <div class="vertical_like">
        <p class="destroy_likes">
          <%= image_tag "check.png" %>
        </p>
      </div>
    <% end %>
    <p class="likes_count_clicked">
      <%= article.likes_count %>
    </p>
  <% else %>
    <%= link_to article_likes_path(article.id), method: :post, remote: true do %>
      <div class="vertical_like">
        <p class="create_likes">
          <%= image_tag "create_like.png" %>
        </p>
      </div>
    <% end %>
    <p class="likes_count">
      <%= article.likes_count %>
    </p>
  <% end %>

<% else %>

<% if article.likes_count.present? %>
  <% if article.likes_count > 0 %>
    <div class="vertical_like">
      <p class="create_likes">
        <%= image_tag "create_like.png" %>
      </p>
    </div>
    <p class="likes_count">
      <%= article.likes_count %>
    </p>
  <% else %>
    <div class="vertical_like">
      <p class="create_likes">
        <%= image_tag "create_like.png" %>
      </p>
    </div>
    <p class="likes_count">
      <%= article.likes_count %>
    </p>
  <% end %>
<% end %>

<% end %>
