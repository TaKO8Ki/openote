<p id="notice"><%= notice %></p>

<h1>Article Pictures</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @article_pictures.each do |article_picture| %>
      <tr>
        <td><%= article_picture.user_id %></td>
        <td><%= article_picture.picture %></td>
        <td><%= link_to 'Show', article_picture %></td>
        <td><%= link_to 'Edit', edit_article_picture_path(article_picture) %></td>
        <td><%= link_to 'Destroy', article_picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article Picture', new_article_picture_path %>
