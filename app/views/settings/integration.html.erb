<div id="setting_links_mobile">
<%= render :partial => 'devise/registrations/links' %>
</div>
<table class="user_setting_table">
  <tr>
    <td valign="top" class="user_setting_sidebar">
      <div id="user_setting_sidebar">
        <%= render :partial => 'devise/registrations/links' %>
      </div>
    </td>
    <td class="gap_mobile">
    </td>
    <td valign="top" class="user_setting_main">
      <div id="user_setting_main">
        <strong>外部サービス</strong>
        <table>
          <tr>
            <td valign="top">

            </td>
            <td valign="top">
              <% if already_integrated(current_user, "github") == true %>
                <%= link_to 'Github連携を解除する',
                    user_social_profile_path(user_id: current_user, id: user_social_profile(current_user, "github")),
                    method: :delete,
                    class: 'github_integration_clicked',
                    data: { confirm: '連携を解除します。よろしいですか?' }%>
              <% else %>
                <%= link_to "Github連携する", user_github_omniauth_authorize_path, { :class => "github_integration" } %>
              <% end %>
            </td>
          </tr>
        </table>
      </div>
    </td>
  </tr>
</table>
