<div id='index_show_main'>
  <div id="article_wrap">
    <% if params[:category] %>
    <div id="article_top">
      <div id='article_top_category_name'>
        <strong><%= @category %></strong>
      </div>
    </div>
    <% end %>

    <div class="clear">
    </div>

    <div id="article_list">
      <%= render "article_period" %>

        <% @articles.each do |article| %>
        <div id='article_list_bottom'>
         <h2>
                 <%= link_to article.title, article_path(article), { :class => "article_link" } %>
         <h2>
        <p class='article_list_date'>
            <%= article.updated_at.strftime("%Y-%m-%d") %>
        </p>
        <p class='article_list_category'>
            <% article.tag_list.each do |f| %>
            <%= link_to f, articles_path(category: f), { :class => "article_category" } %>
            <% end %>
        </p>



        <div id="article_info">
          <ul class="article_info_box">
            <li class="article_info_box_item">
              <p class='article_list_user'>
                <%= image_tag article.user.picture.url %>
              </p>
            </li>
            <li class="article_info_box_item">
              <p class='article_list_comment'>
                <%= image_tag "comment1.png" %>
              </p>
            </li>
            <li class="article_info_box_item">
              <p class='article_list_comment'>
                <%= article.article_comments.count %>
              </p>
            </li>
            <li class="article_info_box_item">
              <p class='article_list_likes'>
                <%= image_tag "icon_red_heart.png"%>
              </p>
            </li>
            <li class="article_info_box_item">
              <p class='article_list_likes'>
                <%= article.likes.count %>
              </p>
            </li>
          </ul>
        </div>


        <!-- <div id="article_test_test">
          <p class='article_list_user'>
            <%= image_tag article.user.picture.url %>
            <%= article.user.username %>
          </p>
        </div> -->


      </div>
        <% end %>
    </div>

    <div id="sidebar">
      <% if user_signed_in? %>
      <div id='sidebar_user_index'>
        <ul class="user_box">
          <li class="user_box_item"><p class='picture_current_user'><%= image_tag current_user.picture.url if current_user.picture.present? %></p></li>
          <li class="user_box_item">
            <p class='sidebar_user_name'>
              <strong><%= link_to "@#{current_user.username}", user_path(current_user) %></strong>
            </p>
          </li>
        </ul>
      </div>
      <% end %>
