<div id="article_wrap">

    <% if params[:category] %>
    <div id="article_top_category">
        <div id='article_top_category_name'>
            <strong><%= @category.name %></strong>
        </div>
    </div>
    <% end %>

    <div class="clear">
    </div>

    <div id="article_list">
        <% @articles.each do |article| %>
        <div id='article_list_bottom'>
         <h2>
                 <%= link_to article.title, article_path(article)%>
         <h2>
        <p class='article_list_date'>
            <%= article.updated_at.strftime("%Y-%m-%d") %>
        </p>
        <p class='article_list_category'>
            <% article.article_categories.each do |f| %>
            <%= link_to f.category.name, articles_path(category: f.category.name),  { :class => "square_btn" } %>
            <% end %>
        </p>

        <p class='article_list_comment'>
            コメント<%= article.article_comments.count %></br>
        </p>

        </div>
        <% end %>
    </div>



    <div id="sidebar">
            <% @articles_likes_order.each do |article| %>
        <p class='sidebar_article_likes_order'>
            <%= link_to article.title, articles_path(article)  %>
        </p>
            <% end %>
    </div>

    <div class="clear">
    </div>
</div>
