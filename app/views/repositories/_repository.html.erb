<% if repository.public_repo %>
<%= link_to "公開", user_repository_path(id: repository.id , status: "private", user_id: current_user.id), :class => "public_repository", method: :put, remote: true %>
<% else %>

<%= link_to "非公開", user_repository_path(id: repository.id, status: "public", user_id: current_user.id), :class => "private_repository", method: :put, remote: true %>
<% end %>
